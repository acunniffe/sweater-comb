{
  "name": "@snyk/sweater-comb",
  "version": "0.0.0",
  "description": "Snyk API linting rules",
  "main": "apinext.yaml",
  "scripts": {
    "test": "jest",
    "test-lint": "spectral lint --fail-severity=warn tests/**/*.yaml",
    "format": "prettier --write **/*.js",
    "lint": "npm run lint:format && npm run lint:js",
    "lint:format": "prettier --check **/*.js",
    "lint:js": "eslint --quiet --color tests/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/snyk/sweater-comb.git"
  },
  "author": "snyk.io",
  "bugs": {
    "url": "https://github.com/snyk/sweater-comb/issues"
  },
  "homepage": "https://github.com/snyk/sweater-comb#readme",
  "devDependencies": {
    "@stoplight/spectral-cli": "^6.0.0",
    "@stoplight/spectral-core": "^1.4.0",
    "@stoplight/spectral-functions": "^1.1.2",
    "@stoplight/spectral-ruleset-migrator": "^1.4.2",
    "@stoplight/spectral-rulesets": "^1.2.2",
    "eslint": "^7.32.0",
    "jest": "^27.0.6",
    "prettier": "^2.3.2"
  }
}
